---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Privacy Policy - Hedgelock">
  <section class="page-header">
    <div class="container">
      <h1>Privacy Policy</h1>
      <p>Hedgelock's commitment to protecting your privacy</p>
    </div>
  </section>

  <section class="privacy-policy">
    <div class="container">
      <div class="pdf-viewer-wrapper">
        <object
          data="/hedgelock/privacy-policy.pdf"
          type="application/pdf"
          class="pdf-viewer"
        >
          <div class="pdf-fallback">
            <p>Unable to display PDF. You can download it instead:</p>
            <a href="/hedgelock/privacy-policy.pdf" class="btn btn-primary" download>
              Download Privacy Policy
            </a>
          </div>
        </object>
      </div>
      <div class="pdf-download">
        <a href="/hedgelock/privacy-policy.pdf" class="btn btn-primary" download>
          Download PDF
        </a>
      </div>
    </div>
  </section>
</Layout>
